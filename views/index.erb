      <div class="container">  
        <form action="/new" method="post" enctype="multipart/form-data">
          <p>
            タイトル:<input type="text" name="title" class="form-control" />
            </p>
          <p>
            本文:<input type="text" name="body" class="form-control" />
          </p>
          <p>
            <input type="file" name="file" class="form-control" />
          </p>
          <p>
            <input type="submit" value="送信" class="btn btn-dark float-right" />
          </p>
        </form>
      </div>
        
      <div class="row">
        <% @contents.each do |content| %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="card">
              <p><%= content.title %></p>
              <p><%= content.body %></p>
               <p><img src="<%= content.img %>" alt="Card image" class="pic"></p>
               <form action="/delete/<%= content.id %>" method="post">
                 <input type="submit" value="DELETE">
               </form>
               <a href="/edit/<%= content.id %>">EDIT</a>
            </div>
          </div>
          <% end %>
      </div>
